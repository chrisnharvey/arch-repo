pkgname=calamares
pkgver=3.2.12
pkgrel=2
pkgdesc='Distribution-independent installer framework'
arch=('x86_64')
url='http://calamares.io/'
license=('LGPL')
depends=('qt5-svg' 'qt5-xmlpatterns' 'kconfig' 'ki18n' 'kcoreaddons' 'solid' 'kpackage' 'plasma-framework'
         'yaml-cpp' 'parted' 'libatasmart' 'udisks2' 'polkit-qt5' 'kpmcore' 'kparts' 'boost') # 'pythonqt' 'libpwquality')
makedepends=('extra-cmake-modules' 'git' 'qt5-tools')
options=('debug' '!staticlibs')
source=("git://github.com/calamares/calamares")
md5sums=('SKIP')

prepare () {
  cd ${pkgname}
  
  #git submodule init
  #git submodule update
  
  #sed -e "s|add_calamares_python_translations|#add_calamares_python_translations|" -i src/modules/CMakeLists.txt
  #patch -R -p1 -i ${srcdir}/5f0993ca8cfbad1a9e0d10454cc4c2509c402921.diff
}

build() {
  #export CC=/usr/bin/clang
  #export CXX=/usr/bin/clang++

  mkdir -p build
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Debug \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DWITH_PYTHONQT=OFF \
    -DWEBVIEW_FORCE_WEBKIT=ON \
    -DINSTALL_CONFIG=ON
  make
}

package() {
  cd build 
  make DESTDIR=${pkgdir} install
}

